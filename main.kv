<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        # top vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            Button:
                text: 'Programs'
                on_press: root.manager.current = 'programs'

            Button:
                text: 'Settings'
