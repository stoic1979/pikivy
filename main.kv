#:import ListItemButton kivy.uix.listview.ListItemButton
#:import la kivy.adapters.listadapter

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        # top vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            Button:
                text: 'Programs'
                on_press: root.manager.current = 'programs'

            Button:
                text: 'Settings'
                on_press: root.manager.current = 'settings'

            Button:
                text: 'Components'
                on_press: root.manager.current = 'components'


        # central grid
        Label:
            text: "Main area"

        # bottom vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (.5, .1)
            Label:
                text: 'abc'

<SettingsScreen>:

    BoxLayout:
        id: bl

        orientation: 'vertical'
        spacing: 10
        padding: 10

        # top vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            Button:
                size_hint: (.15, 1)
                text: 'Home'
                on_press: root.manager.current = 'home'

            Label:
                text: 'Settings'

        BoxLayout:
            orientation: 'horizontal'
            canvas:
                Color:
                    rgba: 37/255., 39/255., 30/255., 1
                Rectangle:
                    pos: self.pos
                    size: self.size



        # bottom vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)
            Label:
                text: 'Somethng here'


