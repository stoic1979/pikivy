<SettingsScreen>:

    BoxLayout:
        id: bl

        orientation: 'vertical'
        spacing: 10
        padding: 10

        # top vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            Button:
                size_hint: (.15, 1)
                text: 'Home'
                on_press: root.manager.current = 'home'

            Label:
                text: 'Settings'

        BoxLayout:
            orientation: 'horizontal'
            canvas:
                Color:
                    rgba: 37/255., 39/255., 30/255., 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size_hint: (.5, 1)
                orientation: 'vertical'
                Button:
                    text: "Camera Settings"
                    on_press: 
                        lytSettsRight.clear_widgets()
                        lytSettsRight.add_widget(CameraSettingsWidget())

                Button:
                    text: "Wifi Settings"
                    on_press: 
                        lytSettsRight.clear_widgets()
                        lytSettsRight.add_widget(WifiSettingsWidget())

                Button:
                    text: "Bluetooth Settings"
                    on_press: 
                        lytSettsRight.clear_widgets()
                        lytSettsRight.add_widget(BluetoothSettingsWidget())


            BoxLayout:
                id: lytSettsRight
                Label:
                    text: "Settings here..."




        # bottom vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)
            Label:
                text: 'Somethng here'


