[CustomListItem@SelectableView+BoxLayout]:
    size_hint_y: ctx.size_hint_y
    #CheckBox:
        #text: "ABC"
    ListItemButton:
        text: ctx.text
        on_press: 
            print "load component", ctx.text
            if ctx.text == "Settings 1": print "1"
            if ctx.text == "Settings 2": print "2"
            #app.connect_wifi(ctx.text, t.text)


<IconButton>:
    text: self.btnText
    halign: 'left'
    valign: 'middle'
    text_size: img.size
    Image:
        id: img
        source: self.parent.imgSource
        x: self.parent.x + self.parent.width/8
        center_y: self.parent.center_y

