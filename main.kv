<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        # top vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .2)


            Button:
                text: 'Sensors'
                on_press: root.manager.current = 'sensors'

            Button:
                text: 'Multimedia'
                on_press: root.manager.current = 'multimedia'

            Button:
                text: 'Commun. Protocol'
                on_press: root.manager.current = 'com_protocol'

            Button:
                text: 'Programs'
                on_press: root.manager.current = 'programs'

            Button:
                text: 'Settings'
                on_press: root.manager.current = 'settings'

            Button:
                text: 'Help'
                on_press: root.manager.current = 'help'

        Label:
            text: ""
            size_hint: (1, .2)
        Image:
            source: "images/pi.png"

        # central grid
        Label:
            text: "This is description of my project, I will add more content here, \nI really like working with pi, it is so cool piece of hardware, \nso versatile, I like GPIO, I like sensors etc."
            multiline: True


<SettingsScreen>:

    BoxLayout:
        id: bl

        orientation: 'vertical'
        spacing: 10
        padding: 10

        # top vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            Button:
                size_hint: (.15, 1)
                text: 'Home'
                on_press: root.manager.current = 'home'

            Label:
                text: 'Settings'

        BoxLayout:
            orientation: 'horizontal'
            canvas:
                Color:
                    rgba: 37/255., 39/255., 30/255., 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size_hint: (.5, 1)
                orientation: 'vertical'
                Button:
                    text: "Camera Settings"
                    on_press: 
                        lytSettsRight.clear_widgets()
                        lytSettsRight.add_widget(CameraSettingsWidget())

                Button:
                    text: "DHT Settings"
                    on_press: 
                        lytSettsRight.clear_widgets()
                        lytSettsRight.add_widget(DhtSettingsWidget())


            BoxLayout:
                id: lytSettsRight
                Label:
                    text: "Settings here..."




        # bottom vertical box
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)
            Label:
                text: 'Somethng here'


